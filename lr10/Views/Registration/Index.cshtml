
@{
    ViewData["Title"] = "Index";
}

@model lr_ten.Models.RegistrationViewModel

<form method="post">
    <div class="form-group mb-2">
        <label asp-for="Name" class="form-label">Name: </label>
        <input asp-for="Name" placeholder="Your Name" class="form-control form-control-lg" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="Email" class="form-label">Email: </label>
        <input asp-for="Email" placeholder="email@example.com" class="form-control form-control-lg" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="ConsultationDate" class="form-label">Date: </label>
        <input asp-for="ConsultationDate" placeholder="Some Name" class="form-control form-control-lg" />
        <span asp-validation-for="ConsultationDate" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="Subject" class="form-label">Subject: </label>
        <select asp-for="Subject" class="form-control form-control-lg">
            <option value="JavaScript">JavaScript</option>
            <option value="C#">C#</option>
            <option value="Java">Java</option>
            <option value="Python">Python</option>
            <option value="Основи">C++</option>
        </select>
        <span asp-validation-for="Subject" class="text-danger"></span>
    </div>
    <div class="text-center mt-3 mb-2">
        <button class="btn btn-primary btn-lg">Sent</button>
    </div>
</form>

